<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PromptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:translationX="360px"
            android:translationY="1000px"
            tools:ignore="MissingConstraints"
            tools:text="Odpowiedź" />

        <Button
            android:id="@+id/show_answer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż odpowiedź"
            android:translationX="300px"
            android:translationY="500px"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/question"
            android:layout_width="308dp"
            android:layout_height="62dp"
            android:padding="15dp"
            android:text="Czy na pewno chcesz zobaczyć odpowiedź?"
            android:translationX="150px"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/return_button"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="Powrót"
            android:translationX="400px"
            android:translationY="800px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>